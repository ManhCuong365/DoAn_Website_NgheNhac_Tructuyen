<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/admin_page.css">
</head>
<body>
    <div class="nav_bar">
        <ul class="menu_list">
            <li class="item"><a href="/display-alluser">User</a></li>
            <li class="item"><a href="/display-allalbum">Album</a></li>
            <li class="item"><a href="/display-allsong">Song</a></li>
            <li class="item"><a href="#">Artist</a></li>
            <li class="item"><a href="#">Favourite</a></li>

        </ul>
    </div>
    <h1>Display Users</h1>
    <table border="1" cellspacing="0" cellpadding="10">
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Password</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        <% dataTable.forEach(user => { %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.password %></td>
                <td><%= user.status %></td>
                <td>
                    <a href="/edit-user?id=<%= user.id %>">Edit</a> |
                    <a href="/delete-user?id=<%= user.id %>" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                </td>
            </tr>
        <% }) %>
</body>
</html>